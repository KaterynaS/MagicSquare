<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/appBackground">

    <TextView
        android:id="@+id/moves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:gravity="center_vertical"
        android:textColor="@color/buttonBackgroundColor"
        android:text="Moves: 0"
        android:textSize="28sp"
        app:layout_constraintEnd_toStartOf="@+id/bnew_game"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bnew_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:background="@color/buttonBackgroundColor"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:text="New Game"
        android:textColor="@color/buttonTextColor"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:columnCount="4"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moves"
        android:background="@color/buttonTextColor">

        <TextView
            android:id="@+id/cell1600"
            android:layout_row="0"
            android:layout_column="0"
            android:text="1"
            style="@style/TileStile"/>

        <TextView
            android:id="@+id/cell1601"
            android:layout_row="0"
            android:layout_column="1"
            android:text="2"
            style="@style/TileStile"/>

        <TextView
            android:id="@+id/cell1602"
            android:layout_row="0"
            android:layout_column="2"
            android:text="3"
            style="@style/TileStile"/>

        <TextView
            android:id="@+id/cell1603"
            android:layout_row="0"
            android:layout_column="3"
            android:text="4"
            style="@style/TileStile"/>

        <TextView
            android:id="@+id/cell1610"
            android:layout_row="1"
            android:layout_column="0"
            android:text="5"
            style="@style/TileStile"/>

        <TextView
            android:id="@+id/cell1611"
            android:layout_row="1"
            android:layout_column="1"
            android:text="6"
            style="@style/TileStile"/>

        <TextView
            android:id="@+id/cell1612"
            android:layout_row="1"
            android:layout_column="2"
            android:text="7"
            style="@style/TileStile"/>

        <TextView
            android:id="@+id/cell1613"
            android:layout_row="1"
            android:layout_column="3"
            android:text="8"
            style="@style/TileStile"/>

        <TextView
            android:id="@+id/cell1620"
            android:layout_row="2"
            android:layout_column="0"
            android:text="9"
            style="@style/TileStile"/>

        <TextView
            android:id="@+id/cell1621"
            android:layout_row="2"
            android:layout_column="1"
            android:text="10"
            style="@style/TileStile"/>

        <TextView
            android:id="@+id/cell1622"
            android:layout_row="2"
            android:layout_column="2"
            android:text="11"
            style="@style/TileStile"/>

        <TextView
            android:id="@+id/cell1623"
            android:layout_row="2"
            android:layout_column="3"
            android:text="12"
            style="@style/TileStile"/>

        <TextView
            android:id="@+id/cell1630"
            android:layout_row="3"
            android:layout_column="0"
            android:text="13"
            style="@style/TileStile"/>

        <TextView
            android:id="@+id/cell1631"
            android:layout_row="3"
            android:layout_column="1"
            android:text="14"
            style="@style/TileStile"/>

        <TextView
            android:id="@+id/cell1632"
            android:layout_row="3"
            android:layout_column="2"
            android:text="15"
            style="@style/TileStile"/>

        <TextView
            android:id="@+id/cell1633"
            android:layout_row="3"
            android:layout_column="3"
            android:text=""
            style="@style/EmptyCellStyle"/>

    </GridLayout>

</android.support.constraint.ConstraintLayout>